# =======================================
# FLEX WEB BACKEND - ENVIRONMENT TEMPLATE
# =======================================
# Copy this file to .env and fill in your actual values
# IMPORTANT: Never commit .env files to git!

# ============ SERVER CONFIGURATION ============
# Port for the backend server
PORT=3000

# Node environment (development, production, testing)
NODE_ENV=development

# Host configuration
HOST=localhost

# ============ CORS CONFIGURATION ============
# Allowed origins for CORS (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ============ LOGGING CONFIGURATION ============
# Log level (error, warn, info, debug, verbose, silly)
LOG_LEVEL=info

# Log file paths
LOG_FILE=logs/combined.log
ERROR_LOG_FILE=logs/error.log

# ============ FLEX EXECUTION SETTINGS ============
# Timeout for Flex program execution (in milliseconds)
EXECUTION_TIMEOUT=30000

# Maximum memory usage for Flex programs (in MB)
MAX_MEMORY_MB=128

# Maximum output size (in characters)
MAX_OUTPUT_SIZE=10000

# ============ WEBSOCKET CONFIGURATION ============
# WebSocket connection timeout (in milliseconds)
WS_TIMEOUT=60000

# Heartbeat interval for WebSocket (in milliseconds)
WS_HEARTBEAT_INTERVAL=30000

# ============ FILE UPLOAD SETTINGS ============
# Maximum file size for uploads (in bytes)
MAX_FILE_SIZE=1048576

# Temporary directory for file processing
TEMP_DIR=temp

# ============ RATE LIMITING ============
# Maximum requests per window
RATE_LIMIT_MAX=100

# Rate limit window in milliseconds
RATE_LIMIT_WINDOW=900000

# ============ SECURITY SETTINGS ============

# API key for admin functions (optional)
ADMIN_API_KEY=your-admin-api-key-here

# ============ DATABASE SETTINGS ============
# Database URL (if using a database)
# DATABASE_URL=sqlite:./database.sqlite

# ============ EXTERNAL SERVICES ============
# GitHub token for accessing repository (optional)
GITHUB_TOKEN=your-github-token-here

# GitHub repository for examples and docs
GITHUB_REPO=Flex-Language/Flex_docs_examples

# ============ MONITORING & METRICS ============
# Enable performance monitoring
ENABLE_MONITORING=false

# Metrics collection endpoint (optional)
# METRICS_ENDPOINT=http://localhost:9090/metrics

# ============ DEVELOPMENT SETTINGS ============
# Enable debug mode
DEBUG=false

# Enable verbose logging
VERBOSE=false

# Enable hot reload (development only)
HOT_RELOAD=false

# ============ PRODUCTION SETTINGS ============
# Enable compression
ENABLE_COMPRESSION=true

# Enable HTTPS (production only)
ENABLE_HTTPS=false

# SSL certificate paths (production only)
# SSL_CERT_PATH=/path/to/cert.pem
# SSL_KEY_PATH=/path/to/private.key

# ============ WEBHOOK CONFIGURATION ============
# Webhook secret for deployment
# WEBHOOK_SECRET=your-webhook-secret-here

# ============ CACHE SETTINGS ============
# Enable caching
ENABLE_CACHE=true

# Cache TTL in seconds
CACHE_TTL=3600

# ============ CLUSTER SETTINGS ============
# Number of worker processes (set to 0 for auto-detection)
CLUSTER_WORKERS=0

# ============ BACKUP SETTINGS ============
# Backup directory
BACKUP_DIR=backups

# Automatic backup interval (in hours)
BACKUP_INTERVAL=24 